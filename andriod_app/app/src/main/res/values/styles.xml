<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Toolbar">
        <item name="android:textColor">@color/text_toolbar</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/toolbarText</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_toolbar</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_item</item>
        <item name="android:textSize">@dimen/sub_title_text</item>
        <item name="android:gravity">left|center</item>
        <item name="android:padding">@dimen/dimen_5dp</item>
    </style>
    <style name="TagButton">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_toolbar</item>
        <item name="android:textSize">@dimen/title_tag</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_filter_tag</item>
        <item name="android:layout_margin">@dimen/dimen_5dp</item>
    </style>

    <style name="SearchView">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_item</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingStart">@dimen/dimen_20dp</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>

    </style>
</resources>
